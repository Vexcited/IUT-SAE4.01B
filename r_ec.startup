#!/bin/bash
# On copie les fichiers de configuration initial.
cp /shared/resolv-to-pc_dns.conf /etc/resolv.conf
cp /shared/r_ec/interfaces /etc/network/interfaces

# On redémarre le service réseau.
/etc/init.d/networking restart

# On bloque tout par défaut.
iptables -P INPUT DROP
iptables -P FORWARD DROP
iptables -P OUTPUT DROP

# PING (ICMP)
iptables -A FORWARD -s 172.16.2.0/24 -p icmp -j ACCEPT
iptables -A FORWARD -d 172.16.2.0/24 -p icmp -m state --state ESTABLISHED,RELATED -j ACCEPT

# DNS (53)
iptables -A FORWARD -s 172.16.3.17 -p udp --sport 53 -m state --state ESTABLISHED,RELATED -j ACCEPT
iptables -A FORWARD -d 172.16.3.17 -p udp --dport 53 -j ACCEPT

# HTTP (80)
iptables -A FORWARD -d 172.16.3.28 -p tcp --dport 80 -j ACCEPT
iptables -A FORWARD -s 172.16.3.28 -p tcp --sport 80 -j ACCEPT

# HTTPS (443)
iptables -A FORWARD -d 172.16.3.28 -p tcp --dport 443 -j ACCEPT
iptables -A FORWARD -s 172.16.3.28 -p tcp --sport 443 -j ACCEPT

# SMTP (25)
iptables -A FORWARD -d 172.16.2.3 -p tcp --dport 25 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A FORWARD -s 172.16.2.3 -p tcp --sport 25 -m state --state ESTABLISHED -j ACCEPT
iptables -A FORWARD -s 172.16.2.3 -p tcp --dport 25 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A FORWARD -d 172.16.2.3 -p tcp --sport 25 -m state --state ESTABLISHED -j ACCEPT

# SUBMISSION (587)
iptables -A FORWARD -d 172.16.2.3 -p tcp --dport 587 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A FORWARD -s 172.16.2.3 -p tcp --sport 587 -m state --state ESTABLISHED -j ACCEPT
iptables -A FORWARD -s 172.16.2.3 -p tcp --dport 587 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A FORWARD -d 172.16.2.3 -p tcp --sport 587 -m state --state ESTABLISHED -j ACCEPT

# SMTPS (465)
iptables -A FORWARD -d 172.16.2.3 -p tcp --dport 465 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A FORWARD -s 172.16.2.3 -p tcp --sport 465 -m state --state ESTABLISHED -j ACCEPT
iptables -A FORWARD -s 172.16.2.3 -p tcp --dport 465 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A FORWARD -d 172.16.2.3 -p tcp --sport 465 -m state --state ESTABLISHED -j ACCEPT

# IMAP (143)
iptables -A FORWARD -d 172.16.2.3 -p tcp --dport 143 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A FORWARD -s 172.16.2.3 -p tcp --sport 143 -m state --state ESTABLISHED -j ACCEPT

# IMAPS (993)
iptables -A FORWARD -d 172.16.2.3 -p tcp --dport 993 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A FORWARD -s 172.16.2.3 -p tcp --sport 993 -m state --state ESTABLISHED -j ACCEPT

# POP3 (110)
iptables -A FORWARD -d 172.16.2.3 -p tcp --dport 110 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A FORWARD -s 172.16.2.3 -p tcp --sport 110 -m state --state ESTABLISHED -j ACCEPT

# POP3S (995)
iptables -A FORWARD -d 172.16.2.3 -p tcp --dport 995 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A FORWARD -s 172.16.2.3 -p tcp --sport 995 -m state --state ESTABLISHED -j ACCEPT

# SFTP (22)
iptables -A FORWARD -s 172.16.2.2 -p tcp --sport 22 -m state --state ESTABLISHED,RELATED -j ACCEPT
iptables -A FORWARD -d 172.16.2.2 -p tcp --dport 22 -j ACCEPT
