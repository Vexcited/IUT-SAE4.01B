#!/bin/bash

# Configuration des adresses IP
ip address add 172.16.20.3/24 dev eth0
ip link set dev eth0 up

# Configuration des routes
ip route add default via 172.16.20.254

# Configuration du server DNS
echo 'nameserver 8.8.8.8' > /etc/resolv.conf

# Configuration des r√®gles iptables
iptables -P INPUT DROP  

iptables -A INPUT -p icmp -j ACCEPT  # Autoriser les pings pour la supervision
iptables -A INPUT -j DROP
